{
  "index_patterns": ["file-*"],
  "mappings": {
    "properties": {
      "file_id": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Unique file ID" }
      },
      "thumbnail_id": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Unique thumbnail ID (for image files only)" }
      },
      "name": {
        "type": "keyword",
        "ignore_above": 64,
        "meta": { "description": "File name" }
      },
      "description": {
        "type": "text",
        "index": false,
        "meta": { "description": "File description" }
      },
      "version": {
        "type": "version",
        "meta": { "description": "File version" }
      },
      "checksum": {
        "type": "text",
        "index": false,
        "meta": { "description": "File checksum" }
      },
      "location": {
        "type": "text",
        "meta": { "description": "File location relative to root directory" }
      },
      "url": {
        "type": "text",
        "index": false
      },
      "size_bytes": {
        "type": "integer",
        "index": false,
        "meta": { "description": "File size in bytes" }
      },
      "size_lines": {
        "type": "integer",
        "index": false,
        "meta": { "description": "File size in lines" }
      },
      "size_records": {
        "type": "integer",
        "index": false,
        "meta": { "description": "File size in records" }
      },
      "format": {
        "type": "keyword",
        "ignore_above": 16,
        "meta": { "description": "File format" }
      },
      "mime_type": {
        "type": "keyword",
        "ignore_above": 32,
        "index": false,
        "meta": { "description": "File MIME type" }
      },
      "assembly_id": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Unique assembly ID" }
      },
      "taxon_id": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Taxonomy-specific taxon ID" }
      },
      "analysis_id": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Unique assembly ID" }
      },
      "scientific_name": {
        "type": "keyword",
        "ignore_above": 64,
        "meta": { "description": "Scientific name" }
      },
      "ancestors": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Taxon IDs of ancestral taxa" }
      }
    }
  }
}
