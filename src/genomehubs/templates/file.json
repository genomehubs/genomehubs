{
  "index_patterns": ["file-*"],
  "mappings": {
    "properties": {
      "file_id": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Unique file ID" }
      },
      "analysis_id": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Unique assembly ID" }
      },
      "preview_name": {
        "type": "keyword",
        "ignore_above": 32,
        "meta": { "description": "Preview file name" }
      },
      "name": {
        "type": "keyword",
        "ignore_above": 64,
        "meta": { "description": "File name" }
      },
      "title": {
        "type": "keyword",
        "ignore_above": 64,
        "meta": { "description": "File title" }
      },
      "description": {
        "type": "text",
        "meta": { "description": "File description" }
      },
      "comment": {
        "type": "text",
        "index": false,
        "meta": { "description": "Additional comment (not indexed)" }
      },
      "date_created": {
        "type": "date",
        "meta": { "description": "Date of file creation" }
      },
      "date_accessed": {
        "type": "date",
        "meta": { "description": "Date remote file was accessed" }
      },
      "version": {
        "type": "keyword",
        "ignore_above": 16,
        "meta": { "description": "File version" }
      },
      "checksum": {
        "type": "text",
        "index": false,
        "meta": { "description": "File checksum" }
      },
      "location": {
        "type": "text",
        "index": false,
        "meta": { "description": "File location relative to root directory" }
      },
      "url": {
        "type": "text",
        "index": false
      },
      "size_bytes": {
        "type": "integer",
        "index": false,
        "meta": { "description": "File size in bytes" }
      },
      "size_pixels": {
        "type": "keyword",
        "ignore_above": 64,
        "index": false,
        "meta": { "description": "File size in pixels (width x height)" }
      },
      "size_lines": {
        "type": "integer",
        "index": false,
        "meta": { "description": "File size in lines" }
      },
      "size_records": {
        "type": "integer",
        "index": false,
        "meta": { "description": "File size in records" }
      },
      "format": {
        "type": "keyword",
        "ignore_above": 16,
        "meta": { "description": "File format" }
      },
      "mime_type": {
        "type": "keyword",
        "ignore_above": 32,
        "index": false,
        "meta": { "description": "File MIME type" }
      },
      "preview_mime_type": {
        "type": "keyword",
        "ignore_above": 32,
        "index": false,
        "meta": { "description": "File preview MIME type" }
      },
      "source_url": {
        "type": "keyword",
        "ignore_above": 128,
        "meta": { "description": "Source URL" }
      },
      "source_url_stub": {
        "type": "keyword",
        "index": false,
        "meta": { "description": "URL stub" }
      },
      "source_slug": {
        "type": "keyword",
        "ignore_above": 64,
        "normalizer": "lowercase",
        "meta": { "description": "Source url slug" }
      }
    }
  }
}
